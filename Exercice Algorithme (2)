Exercice 1 :

algorithme nbre-char ;

var Mot Char
var N Int
Debut
Ecrire("Entrez un mot : ");
Lire(Mot);
N = Len(Mot);
Ecrire(Mot" est composé de "N" lettres");
Fin

Exercice 2 :

var Mot1 Char;
var Mot2 Char;
var Mot3 Char;
Debut
Ecrire("Donnez Mot1 : ");
Ecrire("Donnez Mot2 : ");
Ecrire("Donnez Mot3 : ");
Lire(Mot1);
Lire(Mot2);
Lire(Mot3);
var Mot Char = strcat(Mot1, Mot2, Mot3);
Ecrire("Les mots "Mot3);
Fin

Exercice 3 :

var phrase Char;
var N, poz Int;
Debut
Ecrire("Donner la phrase");
Lire(phrase);
Ecrire("Donner le rang du caractere");
Lire(poz);
Ecrire("Donner le nombre de caracteres à supprimé");
Lire(N);
delete(phrase ,(phrase, poz, N));
Ecrire(phrase);
Fin

Exercice 4 :

var Bonjour Char;
var N, poz Int;
Debut
Ecrire("Donner le mot");
Lire(Bonjour);
Ecrire("Donner le rang du caractere u");
poz = 4;
Lire(4);
Ecrire("Donner le nombre de caracteres à affiché");
N = 1;
Lire(1);
Ecrire(Affichage(Bonjour, (Bonjour, 4, 1)));
Fin

